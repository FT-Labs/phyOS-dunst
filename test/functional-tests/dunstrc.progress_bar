[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#285577"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    timeout = 0

[global]
    font = Monospace 8
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    geometry = "0x5-30+20"
    icon_position = left
    progress_bar_min_width = 100
    progress_bar_max_width = 200
    progress_bar_frame_width = 5
    progress_bar_height = 30
